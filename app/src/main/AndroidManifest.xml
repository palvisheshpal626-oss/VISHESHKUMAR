<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodingLearningApp"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CodingLearningApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Google AdMob App ID -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>
        
        <!-- Resolve manifest merger conflict between play-services-ads-lite and play-services-measurement-api -->
        <!-- Override conflicting AD_SERVICES property from Google Play Services libraries -->
        <property
            android:name="com.google.android.gms.ads.AD_SERVICES"
            android:value="true"
            tools:replace="android:value" />
        
        <!-- Resolve AD_SERVICES_CONFIG conflict between gma_ad_services_config and ga_ad_services_config -->
        <!-- Both play-services-ads-lite and play-services-measurement-api define this property -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />
            
    </application>

</manifest>
