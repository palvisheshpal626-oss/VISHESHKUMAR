<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Card Styles -->
    <style name="Widget.VISHESHKUMAR.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Card.Language" parent="Widget.VISHESHKUMAR.Card">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">20dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.VISHESHKUMAR.Button" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.VISHESHKUMAR.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.VISHESHKUMAR.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.VISHESHKUMAR.Button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <style name="TextAppearance.VISHESHKUMAR.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.VISHESHKUMAR.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/surface_variant</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textAppearance">@style/TextAppearance.VISHESHKUMAR.Chip</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Chip.Difficulty" parent="Widget.VISHESHKUMAR.Chip">
        <item name="chipMinHeight">28dp</item>
        <item name="chipStartPadding">10dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>
    
    <style name="TextAppearance.VISHESHKUMAR.Chip" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Badge Styles -->
    <style name="Widget.VISHESHKUMAR.Badge" parent="">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>
    
    <!-- Progress Bar Styles -->
    <style name="Widget.VISHESHKUMAR.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackCornerRadius">4dp</item>
        <item name="trackThickness">8dp</item>
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.ProgressBar.Circular" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/primary</item>
        <item name="trackColor">@color/surface_variant</item>
        <item name="trackThickness">4dp</item>
    </style>
    
    <!-- Divider Style -->
    <style name="Widget.VISHESHKUMAR.Divider" parent="">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <!-- Section Header Style -->
    <style name="Widget.VISHESHKUMAR.SectionHeader">
        <item name="android:textAppearance">@style/TextAppearance.VISHESHKUMAR.Headline3</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- List Item Styles -->
    <style name="Widget.VISHESHKUMAR.ListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.ListItem.TwoLine" parent="Widget.VISHESHKUMAR.ListItem">
        <item name="android:minHeight">72dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    
    <!-- Icon Styles -->
    <style name="Widget.VISHESHKUMAR.Icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/text_secondary</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Icon.Large">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    
    <!-- Container Styles -->
    <style name="Widget.VISHESHKUMAR.Container">
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Widget.VISHESHKUMAR.Container.Large">
        <item name="android:padding">24dp</item>
    </style>
    
    <!-- Spacing Styles -->
    <style name="Spacing.Small">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="Spacing.Medium">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="Spacing.Large">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    
</resources>
