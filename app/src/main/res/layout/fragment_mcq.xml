<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">
    
    <!-- Progress Indicator -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body2"
        android:text="Question 1 of 5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
    
    <!-- Progress Bar -->
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressBar"
        style="@style/Widget.VISHESHKUMAR.ProgressBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="20"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@id/progressText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>
    
    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        style="@style/Widget.VISHESHKUMAR.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">
        
        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Headline3"
            android:text="Question will be added later"
            android:padding="20dp"
            android:textColor="?attr/colorOnSurface"/>
    </com.google.android.material.card.MaterialCardView>
    
    <!-- Options Container -->
    <LinearLayout
        android:id="@+id/optionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/questionCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">
        
        <!-- Option A -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionA"
            style="@style/Widget.VISHESHKUMAR.Card.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:id="@+id/optionAText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body1"
                android:text="Option A will be added later"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Option B -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionB"
            style="@style/Widget.VISHESHKUMAR.Card.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:id="@+id/optionBText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body1"
                android:text="Option B will be added later"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Option C -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionC"
            style="@style/Widget.VISHESHKUMAR.Card.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:id="@+id/optionCText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body1"
                android:text="Option C will be added later"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>
        
        <!-- Option D -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionD"
            style="@style/Widget.VISHESHKUMAR.Card.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:id="@+id/optionDText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body1"
                android:text="Option D will be added later"
                android:padding="16dp"/>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    
    <!-- Explanation Card (Initially Hidden) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/explanationCard"
        style="@style/Widget.VISHESHKUMAR.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/optionsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/surface_variant">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explanation"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Headline3"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:id="@+id/explanationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.VISHESHKUMAR.Body2"
                android:text="Explanation will be added later"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    
    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            style="@style/Widget.VISHESHKUMAR.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Answer"
            android:enabled="false"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            style="@style/Widget.VISHESHKUMAR.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next Question"
            android:visibility="gone"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>
